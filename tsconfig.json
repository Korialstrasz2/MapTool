{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "types": ["svelte"]
  },
  "include": ["src/**/*", "svelte.config.js"],
  "exclude": ["node_modules/*", "dist/*"]
}
